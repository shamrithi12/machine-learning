import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from sklearn.linear_model import LinearRegression
from sklearn.model_selection import train_test_split
from sklearn.metrics import mean_squared_error, mean_absolute_error,r2_score
df = pd.read_csv(r"D:\sam\Housing.csv")
print("Dataset:")
print(df.head())
x = df.iloc[:, 2:3].values
y = df.iloc[:, 3].values
x_train, x_test, y_train, y_test = train_test_split(
    x, y, test_size=0.2, random_state=123
)
regressor = LinearRegression()
regressor.fit(x_train, y_train)
y_pred = regressor.predict(x_test)
mae = mean_absolute_error(y_test, y_pred)
mse = mean_squared_error(y_test, y_pred)
rmse = np.sqrt(mse)
r2 = r2_score(y_test, y_pred)

print("n/--- Evalution Mertics ---")
print(f"Mean Absolute Error(MAE): {mae:.2f}")
print(f"Mean Squared Error(MSE): {mse:.2f}")
print(f"Root Mean Squared Error(RMSE): {rmse:.2f}")
print(f"R2 Score: {r2:.4f}")
plt.scatter(x, y, color='pink', label='Actual Data')
plt.plot(x, regressor.predict(x), color='blue', label='Regression Line')
plt.xlabel("Height")
plt.ylabel("Weight")
plt.title("Hieght vs Weight with Regression Line")
plt.legend()
plt.show()
